extends layout.jade

append styles
	style(type='text/css')
		| .btn { white-space:normal; }
		| .list-group-item { text-align:center; white-space:normal; }

block content
	if question.dataValues	
		#question_row.row.text-center
			#question_body.col-md-6.col-md-offset-3
				h2 #{question.dataValues.text}
		#answer_row.row.text-center
				form(name='survey_question' method='post' action='/result')
					ul.list-group(name='answer_group' id=question_id)
						for answer in answers
							#answer_body.option.col-md-4.col-md-offset-4
								button.btn.btn-secondary.list-group-item(
									type='submit'
									name='answer'
									value=answer.dataValues.id
								) 
									| #{answer.dataValues.text}
	else
		#notification.row.text-center
			#message.col-md-4.col-md-offset-4
				h3 All the survey questions have been seen! :D
